    <script>


        $(document).ready(function () {
            $("#btnShowModal").click(function () {
                var url = "/Home/ModalValidateCode";

                $("#myModalBodyDiv").load(url, function () {
                    $("#myModal").modal("show");

                })
            });

            $("#btnHideModal").click(function () {
                $("#myModal").modal('hide');
            });

            $("#btnValidar").click(function () {
                var code = document.getElementById('code').value
                $.ajax({
                    type: 'POST',
                    url: '/Home/ModalValidateCode',
                    data: { 'codigo': code },
                    success: function (data) {
                        if (data.respuesta == 'Codigo Valido') {
                            $.ajax({
                                url: "/Home/Create",
                                data: { 'Codigo': code },
                                type: 'GET',
                                success: function (result) {
                                    window.location.href = '/Home/Create?Codigo=' + code
                                },
                                error: function (result) {
                                }
                            });
                           
                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Oops...',
                                text: data.respuesta
                            })
                        }
                    },
                    error: function (error) {
                        alert("Ajax Error: " + error)
                    }
                })
            });

        });

        var d = new Date('December 18, 2021 16:00:00')

        // default example
        simplyCountdown('.simply-countdown-one', {
            year: d.getFullYear(),
            month: d.getMonth() + 1,
            day: d.getDate()
        });

        //jQuery example
        $('#simply-countdown-losange').simplyCountdown({
            year: d.getFullYear(),
            month: d.getMonth() + 1,
            day: d.getDate(),
            enableUtc: false
        });






    </script>




